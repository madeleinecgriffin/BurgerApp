<h1>Eat-Da-Burger! App</h1>

<p>Make and eat burgers with this app.</p>

<!-- Pass in data from server.js -->
<ul>

  {{#each burgers}}

  	<li>
  	    <p><span class="label">Burger Name:</span> {{burger_name}}</p>

        <button data-id="{{id}}" class="delquote">Devour</button>

  	</li>

  {{/each}}

</ul>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="auth">Burger:</label>
    <input type="text" id="auth" name="author">
  </div>

  <button type="submit">Add Burger</button>
</form>