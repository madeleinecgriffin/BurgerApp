<h1>Eat-Da-Burger! App</h1>

<p>Make and eat burgers with this app.</p>

<!-- Pass in data from server.js -->
<ul>

  {{#each burgers}} {{#unless devoured}}
  <li>
    <p>
      <span class="label">Burger Name:</span> {{burger_name}}
    </p>

    <button data-id="{{id}}" class="delquote">Devour</button>

  </li>
  {{/unless}} {{/each}}

</ul>

<h2>Devoured</h2>

<ul>
  {{#each burgers}} {{#if devoured}}
  <li>
    <p>
      <span class="label">Burger Name:</span> {{burger_name}}
    </p>
  </li>
  {{/if}} {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form" action="/api/burgers" method="post">

  <div class="form-group">
    <label for="auth">Burger:</label>
    <input type="text" id="auth" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>